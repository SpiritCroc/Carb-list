<resources>
    <color name="green_default">#43a047</color>
    <color name="green_dark">#388e3c</color>
    <color name="green_light">#4caf50</color>
    <color name="green_very_light">#a5d6a7</color>

    <color name="list_item_add_glow">#ffee58</color><!--not used yet-->
    <color name="list_item_long_click">#bdbdbd</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green_default</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green_dark</item>
    </style>

    <!-- Theme for dialogs. -->
    <style name="DialogTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/DialogTextViewTheme</item>
    </style>

    <!-- Themes for single views. -->
    <style name="DialogTextViewTheme" parent="android:TextAppearance.Widget.TextView">
        <item name="android:padding">@dimen/default_padding</item>
    </style>

</resources>
